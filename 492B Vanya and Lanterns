//https://codeforces.com/problemset/problem/492/B
#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include<set>
#include <map>
#include<iomanip>
#include<unordered_map>
#define ll long long 
using namespace std;
int main  () {
ll n , l ;
cin >>n>>l;
int arr [n];
for (int i=0;i<n ;i++)cin >> arr[i];
sort (arr ,arr+n);
 double d =0;
 double  numstart =arr[0]-0 ;
 double numend =l -arr[n-1];
for (int i = 1; i < n; i++){
    double ans = (arr[i] - arr[i-1]) / 2.0;
    if (d < ans) d = ans;
}
if (numend >=numstart && numend >=d )
cout << fixed << setprecision(10) << numend; 
else if ( numstart >= numend && numstart  >=d )
cout << fixed << setprecision(10) << numstart ; 
else if (  d >= numstart &&  d >=numend )
cout << fixed << setprecision(10) <<d ; 
return 0;
}
